# Backend Environment Example
# Copy to .env and adjust values

# ----- Core -----
ENVIRONMENT=development
DEBUG=true
DATABASE_URL=postgresql://postgres:postgres123@db:5432/luxefurniture
REDIS_URL=redis://redis:6379/0

# ----- Security -----
SECRET_KEY=change-this-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ----- CORS -----
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ----- Uploads -----
MAX_FILE_SIZE=10485760
UPLOAD_DIR=static/images
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# ----- Admin -----
ADMIN_EMAIL=admin@gmail.com
ADMIN_PASSWORD=Admin@123456

# ----- Frontend Base URL -----
FRONTEND_BASE_URL=http://localhost:3000

# ----- Google OAuth -----
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# ----- Payment (Momo) -----
MOMO_PARTNER_CODE=MOMOTEST123456
MOMO_ACCESS_KEY=F8590EC7094EA49A
MOMO_SECRET_KEY=fa22d573f9f8d665a3b26a96acd5d02d
MOMO_ENDPOINT=https://test-payment.momo.vn
MOMO_RETURN_URL=http://localhost:3000/checkout/callback
MOMO_NOTIFY_URL=http://localhost:8000/api/v1/payments/momo/notify

